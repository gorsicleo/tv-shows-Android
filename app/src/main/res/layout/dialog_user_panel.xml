<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_margin="35dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        app:strokeWidth="2dp"
        app:strokeColor="@color/rating_bar_purple"
>

    <ImageView
        android:id="@+id/user_panel_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        tools:src="@drawable/ic_profile_placeholder" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/user_panel_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="imenko.prezimenovic@hotmail.com"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_panel_change_profile_photo_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="20dp"
        style="@style/button_style_user_panel"
        android:text="@string/change_profile_photo"
        app:strokeWidth="2dp"
        android:textSize="16sp"
        app:strokeColor="@color/rating_bar_purple"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/user_panel_logout_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        style="@style/button_style_user_panel_logout"
        android:text="@string/logout"
        android:textSize="16sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"/>








</LinearLayout>