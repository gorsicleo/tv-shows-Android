<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:backgroundTint">@drawable/button_style_background</item>
        <item name="android:textColor">@drawable/button_style_text_color</item>
        <item name="android:clickable">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="button_style_submit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:backgroundTint">@color/rating_bar_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="button_style_write_review">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">14dp</item>
        <item name="android:backgroundTint">@color/rating_bar_purple</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:clickable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">22dp</item>
    </style>

    <style name="rating_bar_style" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/rating_bar_purple</item>
        <item name="colorControlActivated">@color/rating_bar_purple</item>
    </style>

    <style name="collapsing_toolbar_style" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="login_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_field_stroke_selector</item>
    </style>

    <style name="review_text_input_layout_style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/review_field_stroke_selector</item>
    </style>




</resources>